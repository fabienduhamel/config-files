	email = fduhamel@users.noreply.github.com
	name = fduhamel

[color]
	ui = true

[alias]
st = status
ci = commit
lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
oops = commit --amend --no-edit

[core]
    editor=vim
    whitespace = -trailing-space

[diff]
    mnemonicPrefix = true
    renames = true
    wordRegex = .

[push]
	default = simple
