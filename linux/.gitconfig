[user]
#    email = 
#    name  = 

[color]
    ui = true

[alias]
    st    = status
    ci    = commit
    co    = checkout
    lg    = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    oops  = commit --amend --no-edit
    br    = branch
    lbr   = branch -lvv
    rbr   = branch -r
    wdiff = diff --word-diff
    cdiff = diff --cached
    ndiff = diff --name-only
    pushu = push -u origin HEAD

[core]
    editor     = vim
    whitespace = -trailing-space
	excludesfile = /home/fab/.gitignore_global

[diff]
    mnemonicPrefix = true
    renames        = true
    wordRegex      = .

[push]
    default = simple
